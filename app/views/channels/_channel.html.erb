<div class="card mb-3">
  <h5 class="card-header">
    <%= link_to channel_path(channel), class: 'text-dark' do %>
      <%= channel.title %>
    <% end %>
  </h5>

  <div class="card-body">
    <% if channel.description %>
      <p><%= coalesce_to_empty(channel.description) %></p>
    <% end %>

    <p class="font-italic">
      Last Update: 

      <% if channel.last_build_date %>
        <%= local_time_ago(channel.last_build_date) %>
      <% else %>
        <span class="font-italic">Never</span>
      <% end %>
    </p>

    <h6 class="card-title">
      <%= link_to channel.url, target: '_blank' do %>
        <i class="fas fa-link"></i>
        <%= channel.url %>
      <% end %>
    </h6>

    <% if channel.category %>
      <p><%= link_to channel.category.title, channel.category %></p>
    <% end %>

    <div class="mt-4">
      <%= link_to edit_channel_path(channel), class: 'btn btn-outline-info btn-sm' do %>
        <i class="fas fa-pen mr-1"></i>
        Edit
      <% end %>

      <%= link_to channel, method: :delete, data: { confirm: 'Are you sure?' },
        class: 'btn btn-outline-danger btn-sm' do %>

        <i class="fas fa-trash mr-1"></i>
        Delete
      <% end %>
    </div>
  </div>
</div>
